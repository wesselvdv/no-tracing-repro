{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "tsBuildInfoFile": "tsbuildinfo/webpack.tsbuildinfo",
    "plugins": [{"transform": "@effect-ts/tracing-plugin"}]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
